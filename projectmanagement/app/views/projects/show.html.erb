<div class="container">
<section class="articles">

<div class="column is-8 is-offset-2">
                <!-- START ARTICLE -->
                <div class="card article">
                    <div class="card-content">
                        <div class="media">
                            <div class="media-content has-text-centered">
                            	 <p class="title article-title"> <%= @project.name %></p>
                                <div class="tags has-addons level-item">
                                    <span class="tag is-rounded is-info"> Start date </span>
                                    <span class="tag is-rounded"><%= @project.start_date %></span>
                                </div>
                            </div>
                        </div>
                        <div class="content article-body">
                            <p><%= @project.summary %> </p>
                            
                        </div>
                        <div class="tags has-addons level-item">
                                    <span class="tag is-rounded is-info"> End date </span>
                                    <span class="tag is-rounded"><%= @project.end_date %></span>
                                </div>
                    </div>
 						<div class="media-content has-text-centered">
 							 <% if current_user %>
							<%= link_to 'Edit', edit_project_path(@project), :class => "button is-primary is-medium" %> 
							<% end %>
						</div>

                	</div>
                <!-- END ARTICLE -->
            </div>



<h2 class="title">My tasks</h2>
<h3 class="subtitle"><%= @project.tasks.count %> tasks </h3>
<%= render @project.tasks %>


<h2>Add a task:</h2>
<%= render 'tasks/form' %>





<%= link_to 'Back', projects_path, :class => "button is-link" %>

        </section>
    </div>




