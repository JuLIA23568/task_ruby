<section class="hero is-info is-medium is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
	     <h2 class="title">Log in</h2>
     </div>
      <div class="container">
        <div  class="columns is-centered">
          <div class="column is-4">
           <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  	          
              <div class="field">
            		<div class="control">
            			<%= f.input :email, required: false, autofocus: true, type: "email",  placeholder: 'user@domain.com', input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
                  </div>
              </div>

              <div class="field">
  		          <div class="control">
                  <%= f.input :password, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
		            </div>
	            </div>

 	            <div class="field">
  		          <label class="checkbox">
                  <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
                </label>
              </div>

                <%= f.button :submit, "Log in", class: 'button is-primary is-outlined is-medium ' %>
          <% end %>
           <br />
        <%= render "devise/shared/links" , class: 'link' %>
        </div>
      </div>
    </div>
  </div>
       
    </div>
  </div>
</section>


