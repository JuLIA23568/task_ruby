<h1>Editing Task</h1>
<%= form_for([@project, @task]) do |form| %>
	

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    
    <%= form.select(:status, options_for_select([['new','new' ], ['in progress','in progress'],['done', 'done']])) %>
  </p>
  <p>
    <%= form.submit %>
  </p>
 <% end %>

